#:kivy 2.0.0

<IDScreen>:
    id_label: id_label
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: id_label
                text: 'ID: '
                font_size: '25sp'
            Label:
                id: instructions
                text: 'yote'
                font_size: '20sp'
        GridLayout:
            cols: 3
            rows: 4
            spacing: [5]
            padding: [10]
            Button:
                text: '1'
                on_press: root.updateID(self.text)
            Button:
                text: '2'
                on_press: root.updateID(self.text)
            Button:
                text: '3'
                on_press: root.updateID(self.text)
            Button:
                text: '4'
                on_press: root.updateID(self.text)
            Button:
                text: '5'
                on_press: root.updateID(self.text)
            Button:
                text: '6'
                on_press: root.updateID(self.text)
            Button:
                text: '7'
                on_press: root.updateID(self.text)
            Button:
                text: '8'
                on_press: root.updateID(self.text)
            Button:
                text: '9'
                on_press: root.updateID(self.text)
            Button:
                text: 'delete'
                on_press: root.updateID(self.text)
            Button:
                text: '0'
                on_press: root.updateID(self.text)
            Button:
                text: 'enter'
                on_press: root.sendID()


