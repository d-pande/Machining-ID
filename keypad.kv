#:kivy 2.0.0

<IDScreen>:
    id_label: id_label
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: id_label
            text: 'ID: '
            font_size: '25sp'
        GridLayout:
            cols: 3
            rows: 4
            size_hint_x: 1.25
            Button:
                text: '1'
                on_press: root.updateID('1')
            Button:
                text: '2'
                on_press: root.updateID('2')
            Button:
                text: '3'
                on_press: root.updateID('3')
            Button:
                text: '4'
                on_press: root.updateID('4')
            Button:
                text: '5'
                on_press: root.updateID('5')
            Button:
                text: '6'
                on_press: root.updateID('6')
            Button:
                text: '7'
                on_press: root.updateID('7')
            Button:
                text: '8'
                on_press: root.updateID('8')
            Button:
                text: '9'
                on_press: root.updateID('9')
            Button:
                text: 'delete'
                on_press: root.updateID('delete')
            Button:
                text: '0'
                on_press: root.updateID('0')
            Button:
                text: 'enter'
                on_press: root.sendID()
            
            
            
        

<MachineScreen>:
    BoxLayout:
        Button:
            text: 'Go to ID'
            on_press: root.manager.current = 'ID'
