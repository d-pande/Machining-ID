#:kivy 2.0.0

<IDScreen>:
    id_label: id_label
    BoxLayout:
        orientation: 'horizontal'
        padding: [10]
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: id_label
                text: 'ID: '
                font_size: '25sp'
            Label:
                id: instructions
                text: 'Enter your Student ID'
                font_size: '20sp'
            GridLayout:
                cols: 2
                rows: 1
                spacing: [5]
                padding: [10]
                Button:
                    text: 'Sign In'
                    on_press: root.signIn()
                Button:
                    text: 'Sign Out'
                    on_press: root.signOut()
        GridLayout:
            cols: 3
            rows: 4
            spacing: [5]
            padding: [10]
            Button:
                text: '1'
                on_press: root.updateID(self.text)
            Button:
                text: '2'
                on_press: root.updateID(self.text)
            Button:
                text: '3'
                on_press: root.updateID(self.text)
            Button:
                text: '4'
                on_press: root.updateID(self.text)
            Button:
                text: '5'
                on_press: root.updateID(self.text)
            Button:
                text: '6'
                on_press: root.updateID(self.text)
            Button:
                text: '7'
                on_press: root.updateID(self.text)
            Button:
                text: '8'
                on_press: root.updateID(self.text)
            Button:
                text: '9'
                on_press: root.updateID(self.text)
            Button:
                text: 'Delete'
                on_press: root.updateID(self.text)
            Button:
                text: '0'
                on_press: root.updateID(self.text)
            Button:
                text: 'Clear'
                on_press: root.updateID(self.text)


<MachineScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Select machines you will use:'
        GridLayout:
            rows: 5
            cols: 5
            spacing: [20]
            padding: [40]
            Button:
                id: 1
                name: 1
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 2
                name: 2
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 3
                name: 3
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 4
                name: 4
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 5
                name: 5
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 6
                name: 6
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 7
                name: 7
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                id: 8
                name: 8
                text: root.machines[self.name - 1]
                color: root.black
                background_normal: ''
                background_color: root.black
                on_release: root.toggleColor(self.name, self.background_color)
            Button:
                text: 'Confirm'
                on_release: root.sendMachines()

<ConfirmationScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: confirm
            background_normal: ''
            background_color: [0, 1, 0, 1]
            text: 'ID Confirmed! You are signed in.\nPress to return to ID Screen'
            font_size: '40sp'
            halign: 'center'
            on_press: root.manager.current = 'ID'